<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">
	<application>
		<message-bundle>application</message-bundle>
		<locale-config>
			<default-locale>en</default-locale>
		</locale-config>
	</application>
	<managed-bean>
		<managed-bean-name>userBean</managed-bean-name>
		<managed-bean-class>info.sigmaproject.jat.beans.UserBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>postBean</managed-bean-name>
		<managed-bean-class>info.sigmaproject.jat.beans.PostBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>userBean</property-name>
			<value>#{userBean}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>testBean</managed-bean-name>
		<managed-bean-class>info.sigmaproject.jat.beans.TestBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

</faces-config>
