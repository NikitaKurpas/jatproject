<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="JATProject_2">
		<class>entities.Comment</class>
		<class>entities.Post</class>
		<class>entities.UserEntity</class>
		<class>entities.Employee</class>
		<class>entities.FullTimeEmployee</class>
		<class>entities.PartTimeEmployee</class>
		<class>entities.Entity7</class>
		<properties>
			<property name="javax.persistence.jdbc.url"
                 value="jdbc:derby://localhost:1527/sun-appserv-samples;create=true"/>
       		<property name="javax.persistence.jdbc.user" value="APP"/>
       		<property name="javax.persistence.jdbc.password" value="APP"/>
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
            <property name="eclipselink.create-ddl-jdbc-file-name" value="createDDL_ddlGeneration.jdbc"/>
            <property name="eclipselink.drop-ddl-jdbc-file-name" value="dropDDL_ddlGeneration.jdbc"/>
            <property name="eclipselink.ddl-generation.output-mode" value="both"/>
		</properties>
	</persistence-unit>
</persistence>
